<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="spring-security-beans.xml"/>
    <import resource="spring-security.xml"/>
    <import resource="spring-datasource.xml"/>
    <import resource="spring-email.xml"/>

        <bean id="valuteBorder"
          class="com.mtsmda.souvenir.valute.ValuteBorder">
        <property name="valuteProperties">
            <props>
                <prop key="EUR">978</prop>
                <prop key="USD">840</prop>
                <prop key="RUB">643</prop>
                <prop key="RON">946</prop>
                <prop key="UAH">980</prop>
                <prop key="GBP">826</prop>
            </props>
        </property>
    </bean>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location">
            <value>classpath*:trans.properties</value>
        </property>
    </bean>

    <bean id="defaultTransactionTimeOut2" class="com.mtsmda.souvenir.spring.stereotype.DefaultTransactionTimeOut2">
        <property name="small" value="${def.tran.time.out.small}"/>
        <property name="medium" value="${def.tran.time.out.medium}"/>
    </bean>

</beans>